@page "/bar-chart"

<Rows>
    <Markup Content="BarChart component is used for displaying some statistics info in bar charts to the console." Foreground="@Color.Grey70" />
    <Markup Content="Source Code: BarChart.razor" Foreground="@Color.DeepSkyBlue1" Decoration="@Decoration.Underline" link="@DocumentationUrl" />
    <Newline />

    <Markup Content="Some bar charts"/>
    <Panel Title="Code">
        <SyntaxHighlighter Language="razor"
                           Code="@ExampleCode"
                           ShowLineNumbers="true" />
    </Panel>

    <Panel Title="Preview">
        <BarChart BarChartItems="@GenerateFruits()"
                  Label="Fruits" LabelAlignment="Justify.Left" LabelForeground="Color.Red" LabelDecoration="Decoration.Italic"
                  Width="60"
                  ShowValues="true"
                  />
    </Panel>
</Rows>

@code{
    private const string ExampleCode = @"
<BarChart BarChartItems=""@GenerateFruits()""
    Label=""Fruits"" LabelAlignment=""Justify.Left"" LabelForeground=""Color.Red"" LabelDecoration=""Decoration.Italic""
    Width=""60""
    ShowValues=""true""
/>
";
    private const string DocumentationUrl = "https://github.com/LittleLittleCloud/RazorConsole/blob/main/src/RazorConsole.Core/Components/BarChart.razor";

    private List<IBarChartItem> GenerateFruits()
    {
        return
        [
            new BarChartItem("Apples", 55.2, Color.FromHex("#fc034e")),
            new BarChartItem("Oranges", 20.7, Color.Orange1),
            new BarChartItem("Bananas", 40, Color.Yellow)
        ];
    }
}
