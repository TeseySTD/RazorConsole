@inherits LayoutComponentBase

<Header/>
<Panel Expand="true" Border="BoxBorder.Double">
    <Grid Columns="2" Expand="true">
        <Padder Padding="@(new (1, 1, 1, 1))">
            <NavBar @bind-IsFocused="NavBarIsFocused" />
        </Padder>
		<Padder Padding="@(new(0,1,0,0))">
            @Body
		</Padder>
    </Grid>
</Panel>
<Footer NavBarIsFocused="NavBarIsFocused" />

@code {
    private bool NavBarIsFocused { get; set; }
}
