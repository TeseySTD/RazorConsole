<Project Sdk="Microsoft.NET.Sdk.Razor">

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
	<PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="ColorCode.Core" />
    <PackageReference Include="Markdig" />
  </ItemGroup>
  <Import Project="$(RepoRoot)/nuget/nuget-package.props" />

  <ItemGroup>
    <InternalVisibleTo Include="RazorConsole.Tests" />
    <InternalVisibleTo Include="RazorConsole.Website" />
  </ItemGroup>

  <PropertyGroup>
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>
 
  <ItemGroup>
    <None Include="build/RazorConsole.Core.targets" Pack="true" PackagePath="build/" />
    <None Include="build/RazorConsole.Core.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

  <PropertyGroup>
    <NoWarn>$(NoWarn);BL0007</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

</Project>
