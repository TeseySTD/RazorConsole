@namespace RazorConsole.Components

@using System.Collections.Generic
@using Microsoft.AspNetCore.Components

<tbody @attributes="AdditionalAttributes">
    @ChildContent
</tbody>

@code {
    /// <summary>
    /// Table body section for <see cref="SpectreTable"/> containing main data rows.
    /// </summary>
    /// <remarks>
    /// Contains <see cref="SpectreTR"/> rows with <see cref="SpectreTD"/> data cells.
    /// </remarks>

    /// <summary>
    /// Content containing body rows.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional HTML attributes for the tbody element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object?>? AdditionalAttributes { get; set; }
}